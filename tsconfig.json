{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "declaration": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": ["."]
}
